<div class="container">
  <div class="row">
    <div class="col-lg-4 offset-lg-4 col-md-6 offset-md-3 col-sm-8 offset-sm-2 col-8 offset-2">
      <h4 class="text-center my-5">カテゴリー編集</h4>

      <%= form_with model: @category, url: admin_category_path do |f| %>
        <div class="form-group mb-4">
          <%= f.text_field :name, placeholder: "カテゴリー名", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit "変更を保存", class: "btn btn-warning btn-block btn-{themecolor} rounded-pill" %>
        </div>
      <% end %>
    </div>
    <div class="offset-lg-4 offset-md-3 offset-sm-2 offset-2"></div>
  </div>
</div>