<div class="container">
  <div class="row mt-5">
    <div class="col-lg-4 offset-lg-4 col-md-6 offset-md-3 col-sm-8 offset-sm-2 col-8 offset-2">
      <h4 class="text-center mb-3"><%= @customer.name %>さんの会員情報編集</h4>

      <%= form_with model: @customer, url: admin_customer_path(@customer) do |f| %>
        <div class="form-group mb-4">
          <%= f.file_field :profile_image, accept: "image/*", class: "form-control" %>
        </div>

        <div class="form-group mb-4">
          <%= f.text_field :name, placeholder: "ユーザー名の編集", class: "form-control" %>
        </div>

        <div class="form-group mb-4">
          <%= f.text_area :introduction, placeholder: "自己紹介文の編集", class: "form-control" %>
        </div>

        <div class="form-group mb-4">
          <%= f.radio_button :is_deleted, :false %>
          <%= f.label :is_deleted, "有効" %>
          <%= f.radio_button :is_deleted, :true %>
          <%= f.label :is_deleted, "退会" %>
        </div>

        <div class="form-group">
          <%= f.submit "変更を保存", class: "btn btn-warning btn-block btn-{themecolor} rounded-pill" %>
        </div>
      <% end %>
    </div>
    <div class="offset-lg-4 offset-md-3 offset-sm-2 offset-2"></div>
  </div>
</div>