<% if admin_signed_in? %>
  <div class="mt-3 ml-3">
    <%= form_with url: admin_searches_path, method: :get do |f| %>
      <%= f.text_field :word %>
      <%= f.select :range, options_for_select([["会員", "customer"], ["レシピ", "recipe"], ["レビュー", "review"]]) %>
      <%= f.select :search, options_for_select([["完全一致", "perfect_match"], ["前方一致", "forward_match"],  ["後方一致", "backword_match"], ["部分一致", "partial_match"]]) %>
      <%= f.submit "検索", class: "btn btn-warning btn-{themecolor} rounded-pill" %>
    <% end %>
  </div>
<% end %>