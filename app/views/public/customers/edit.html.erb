<div class="container">
  <%= render "layouts/error", object: @customer %>
  <div class="row mt-5">
    <div class="col-lg-4 offset-lg-4 col-md-6 offset-md-3 col-sm-8 offset-sm-2 col-8 offset-2">
      <h4 class="text-center mb-3">ユーザー情報編集</h4>
      <%= form_with model: @customer do |f| %>
        <div class="form-group mb-4">
          <%= f.file_field :profile_image, accept: "image/*", class: "form-control" %>
        </div>

        <div class="form-group mb-4">
          <%= f.text_field :name, placeholder: "ユーザー名(2〜20文字)", class: "form-control" %>
        </div>

        <div class="form-group mb-4">
          <%= f.text_area :introduction, placeholder: "自己紹介文(200文字以内)", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit "ユーザー情報を編集する", class: "btn btn-warning btn-block btn-{themecolor} rounded-pill" %>
        </div>
      <% end %>
      <%= link_to "退会する", customers_unsubscribe_path, class: "text-secondary" %>
    </div>
    <div class="offset-lg-4 offset-md-3 offset-sm-2 offset-2"></div>
  </div>
</div>