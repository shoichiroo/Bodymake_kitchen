<div class="container">
  <div class="row">
    <div class="col-md-4 offset-md-4 mt-5">
      <h4 class="text-center mb-3">ユーザー情報編集</h4>

      <%= form_with model: @customer do |f| %>
        <div class="form-group mb-4">
          <%= f.file_field :profile_image, accept: "image/*", class: "form-control" %>
        </div>

        <div class="form-group mb-4">
          <%= f.text_field :name, placeholder: "ユーザー名の編集", class: "form-control" %>
        </div>

        <div class="form-group mb-4">
          <%= f.text_area :introduction, placeholder: "自己紹介文の追加", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit "ユーザー情報を編集する", class: "btn btn-warning btn-block btn-{themecolor} rounded-pill" %>
        </div>
      <% end %>
      <%= link_to "退会する", customers_unsubscribe_path, class: "text-secondary" %>
    </div>
  </div>
</div>