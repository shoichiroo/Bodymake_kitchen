<% if recipe.favorited_by?(current_customer) %>
  <%= link_to "お気に入りを削除", recipe_favorites_path(recipe), method: :delete, class: "btn btn-secondary btn-block btn-{themecolor} rounded-pill mb-4", remote: true %>
<% else %>
  <%= link_to "お気に入りに追加", recipe_favorites_path(recipe), method: :post, class: "btn btn-warning btn-block btn-{themecolor} rounded-pill mb-4", remote: true %>
<% end %>