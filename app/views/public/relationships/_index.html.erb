<% customers.each do |customer| %>
  <div class="row border-bottom">
    <div class="col-md-12 customer-follow-list">
      <div>
        <%= link_to customer_path(customer), class: "text-dark" do %>
        <div class="mt-2" style="width: 70px; height: 70px;">
          <%= image_tag customer.get_profile_image, class: "rounded-circle img-thumbnail", style: "width: 100%; height: 70px; object-fit: cover;" %>
        </div>
        <h4><%= customer.name %></h4>
        <% end %>
      </div>
      <% if current_customer != customer %>
        <% if customer.followed_by?(current_customer) %>
          <p style="line-height: 6;"><%=link_to "フォロー中", customer_relationships_path(customer), method: :delete, class: "btn btn-warning btn-{themecolor} rounded-pill" %></p>
        <% else %>
          <p  style="line-height: 6;"><%=link_to "フォローする", customer_relationships_path(customer), method: :post, class: "btn btn-outline-warning btn-{themecolor} rounded-pill" %></p>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>