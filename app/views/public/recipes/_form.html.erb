<div class="row">
  <div class="col-lg-4 offset-lg-4 col-md-6 offset-md-3 col-sm-8 offset-sm-2 col-8 offset-2">
    <% if controller.controller_name == "recipes" && controller.action_name == "new" %>
      <h4 class="text-center my-5" style="width: 90%;">オリジナルレシピを投稿する</h4>
    <% else %>
      <h4 class="text-center my-5" style="width: 90%;">オリジナルレシピを編集する</h4>
    <% end %>

    <%= form_with model: recipe do |f| %>
      <div class="form-group custom-form-group">
        <%= f.label "レシピの画像" %>
        <%= f.file_field :image, accept: "image/*", class: "form-control" %>
      </div>

      <div class="form-group custom-form-group">
        <%= f.label "レシピのタイトル" %>
        <%= f.text_field :name, placeholder: "20文字以内", class: "form-control" %>
      </div>

      <div class="form-group custom-form-group">
        <%= f.label "キャッチコピー" %>
        <%= f.text_area :description, placeholder: "60文字以内", class: "form-control" %>
      </div>

      <div class="form-group custom-form-group">
        <%= f.label "カテゴリー" %>
        <%= f.collection_select :category_id, @categories, :id, :name, {}, class: "form-control" %>
      </div>

      <div class="form-group custom-form-group">
        <%= f.label "総カロリー" %>
        <%= f.number_field :calorie, placeholder: "1 ~ 1000", class: "form-control", min: 1, max: 1000 %>
        <p>kcal</p>
      </div>

      <div class="form-group custom-form-group">
        <%= f.label "たんぱく質" %>
        <%= f.number_field :protein, placeholder: "1 ~ 100", class: "form-control", min: 1, max: 100 %>
        <p>g</p>
      </div>

      <div class="form-group custom-form-group">
        <%= f.label "脂質" %>
        <%= f.number_field :fat, placeholder: "1 ~ 50", class: "form-control", min: 1, max: 50 %>
        <p>g</p>
      </div>

      <div class="form-group custom-form-group">
        <%= f.label "炭水化物" %>
        <%= f.number_field :carbo, placeholder: "1 ~ 500", class: "form-control", min: 1, max: 500 %>
        <p>g</p>
      </div>

      <div class="form-group custom-form-group mb-5">
        <%= f.label "タグ付け(複数可)" %>
        <%= f.text_field :tag_names, placeholder: "#で区切ってください(10文字以内)", class: "form-control" %>
      </div>

      <div class="form-group custom-form-group">
        <% if controller.controller_name == "recipes" && controller.action_name == "new" %>
          <%= f.submit "レシピを投稿する", class: "btn btn-warning btn-block btn-{themecolor} rounded-pill", style: "width: 90%;" %>
        <% else %>
          <%= f.submit "編集完了", class: "btn btn-warning btn-block btn-{themecolor} rounded-pill", style: "width: 90%;" %>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="offset-lg-4 offset-md-3 offset-sm-2 offset-2"></div>
</div>
