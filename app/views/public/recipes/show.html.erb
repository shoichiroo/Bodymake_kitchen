<div class="container">
  <div class="row">
    <div class="col-md-5 offset-md-1">
      <%= image_tag @recipe.get_image(300, 300) %>
    </div>
    <div class="col-md-5">
      <h4><strong><%= @recipe.name %></strong></h4>
      <% if @recipe.favorited_by?(current_customer) %>
        <%= link_to "お気に入りを削除", recipe_favorites_path(@recipe), method: :delete, class: "btn btn-secondary btn-block btn-{themecolor} rounded-pill" %>
      <% else %>
        <%= link_to "お気に入りに追加", recipe_favorites_path(@recipe), method: :post, class: "btn btn-warning btn-block btn-{themecolor} rounded-pill" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h4><strong>このレシピを評価する</strong></h4>
      <%= form_with model: [@recipe, @review] do |f| %>
        <div class="form-group" id="star">
          <%= f.hidden_field :star, id: :review_star %>
        </div>

        <script>
        $('#star').empty();
        $('#star').raty({
          size     : 36,
          starOff:  '<%= asset_path('star-off.png') %>',
          starOn : '<%= asset_path('star-on.png') %>',
          scoreName: 'review[star]',
          half: false,
        });
        </script>

        <div class="form-group">
          <%= f.text_area :comment, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit "投稿", class: "btn btn-warning btn-{themecolor} rounded-pill" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <% @reviews.each do |review| %>
        <div id="star-rate<%= review.id %>"></div>
          <script>
            $('#star-rate<%= review.id %>').empty();
            $('#star-rate<%= review.id %>').raty({
            size      : 36,
            starOff   : '<%= asset_path('star-off.png') %>',
            starOn    : '<%= asset_path('star-on.png') %>',
            half      : false,
            readOnly: true,
            score: <%= review.star %>,
          });
          </script>
        <%= review.comment %>
        <%= link_to "削除", recipe_review_path(@recipe, review), method: :delete, class: "btn btn-danger btn-{themecolor} rounded-pill" %>
      <% end %>
    </div>
  </div>
</div>