<div class="container">
  <div class="row">
    <div class="col-12">
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
             <%= image_tag "ryori.jpg", style: "display: block; object-fit: cover; height: 400px; width: 100%;" %>
          </div>
          <div class="carousel-item">
            <%= image_tag "bento.jpg", style: "display: block; object-fit: cover; height: 400px; width: 100%;" %>
          </div>
          <div class="carousel-item">
            <%= image_tag "washoku.jpg", style: "display: block; object-fit: cover; height: 400px; width: 100%;" %>
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>
  <div class="row my-5">
    <div class="col-md-6 offset-md-3">
      <%= form_with url: searches_path, method: :get do |f| %>
        <%= f.text_field :name, placeholder: "料理名", class: "form-control" %>
        <%= f.collection_select(:category, @categories, :id, :name, {prompt: "--カテゴリーを選択する--"}, class: "form-control") %>
        <%= f.submit "レシピを検索", class: "btn btn-warning btn-{themecolor} rounded-pill" %>
      <% end %>
    </div>
    <div class="offset-md-3"></div>
  </div>
  <div class="row mb-3">
    <div class="col-md-12">
      <h4>みんなのお気に入りレシピランキング</h4>
    </div>
  </div>
  <div class="row mb-1">
    <% @favorite_recipes.each.with_index(1) do |recipe, i| %>
      <div class="col-lg-3 col-md-4 col-sm-6 col-6 mb-4">
        <h5 class="text-center"><strong><%= i %></strong> 位</h5>
        <div class="card">
          <%= link_to recipe_path(recipe) do %>
            <%= image_tag recipe.image, style: "object-fit: cover; height: 253px; width: 100%;" %>
          <% end %>
          <div class="card-body">
            <div class="star-average-<%= recipe.id %>"></div>
              <script>
                $(".star-average-<%= recipe.id %>").empty();
                $(".star-average-<%= recipe.id %>").raty({
                size      : 36,
                starOff   : '<%= asset_path('star-off.png') %>',
                starOn    : '<%= asset_path('star-on.png') %>',
                starHalf  : "<%= asset_path('star-half.png') %>",
                half      : false,
                readOnly: true,
                score: <%= recipe.reviews.average(:star).to_f.round(1) %>,
              });
              </script>
              <span>(<%= recipe.reviews.count %>件)</span>
            <p class="card-text"><strong><%= recipe.name %></strong></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row mb-5">
    <div class="col-md-12 text-right">
      <%= link_to favorites_path, class: "text-secondary" do %>
        もっと見る <i class="fas fa-angle-right"></i>
      <% end %>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-md-12">
      <h4>アクセスランキング</h4>
    </div>
  </div>
  <div class="row mb-1">
    <% @view_count_recipes.each.with_index(1) do |recipe, i| %>
      <div class="col-lg-3 col-md-4 col-sm-6 col-6 mb-4">
        <h5 class="text-center"><strong><%= i %></strong> 位</h5>
        <div class="card">
          <%= link_to recipe_path(recipe) do %>
            <%= image_tag recipe.image, style: "object-fit: cover; height: 253px; width: 100%;" %>
          <% end %>
          <div class="card-body">
            <div class="star-average-<%= recipe.id %>"></div>
              <script>
                $(".star-average-<%= recipe.id %>").empty();
                $(".star-average-<%= recipe.id %>").raty({
                size      : 36,
                starOff   : '<%= asset_path('star-off.png') %>',
                starOn    : '<%= asset_path('star-on.png') %>',
                starHalf  : "<%= asset_path('star-half.png') %>",
                half      : false,
                readOnly: true,
                score: <%= recipe.reviews.average(:star).to_f.round(1) %>,
              });
              </script>
              <span>(<%= recipe.reviews.count %>件)</span>
            <p class="card-text"><strong><%= recipe.name %></strong></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row mb-5">
    <div class="col-md-12 text-right">
      <%= link_to view_counts_path, class: "text-secondary" do %>
        もっと見る <i class="fas fa-angle-right"></i>
      <% end %>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-md-12">
      <h4>新着レシピ</h4>
    </div>
  </div>
  <%= render "index", recipes: @recipes %>
</div>