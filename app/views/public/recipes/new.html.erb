<div class="container">
  <div class="row">
    <div class="col-md-6 offset-3">
      <h4 class="text-center my-5">オリジナルレシピを投稿する</h4>

      <%= form_with model: @recipe do |f| %>
        <div class="form-group">
          <%= f.label "レシピの画像" %>
          <%= f.file_field :image, accept: "image/*" %>
        </div>

        <div class="form-group">
          <%= f.label "レシピのタイトル" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label "キャッチコピー" %>
          <%= f.text_area :description, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label "カテゴリー" %>
          <%= f.collection_select :category_id, @categories, :id, :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label "総カロリー" %>
          <%= f.number_field :calorie, placeholder: "1 ~ 1000", class: "form-control", min: 1, max: 1000 %>
        </div>

        <div class="form-group">
          <%= f.label "たんぱく質" %>
          <%= f.number_field :protein, placeholder: "1 ~ 100", class: "form-control", min: 1, max: 100 %>
        </div>

        <div class="form-group">
          <%= f.label "脂質" %>
          <%= f.number_field :fat, placeholder: "1 ~ 50", class: "form-control", min: 1, max: 50 %>
        </div>

        <div class="form-group">
          <%= f.label "炭水化物" %>
          <%= f.number_field :carbo, placeholder: "1 ~ 500", class: "form-control", min: 1, max: 500 %>
        </div>
      <% end %>
    </div>
  </div>
</div>