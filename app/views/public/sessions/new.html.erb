<div class="container">
  <div class="row mt-5">
    <div class="col-lg-4 offset-lg-4 col-md-6 offset-md-3 col-sm-8 offset-sm-2 col-8 offset-2">
      <h4 class="text-center mb-3">ログイン</h4>

      <%= form_with model: @customer, url: customer_session_path do |f| %>
        <div class="form-group mb-4">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "form-control" %>
        </div>

        <div class="form-group field">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group field mb-4">
            <%= f.check_box :remember_me %>
            <%= f.label "ログインしたままにする", class: "text-secondary" %>
          </div>
        <% end %>

        <div class="form-group mb-4">
          <%= f.submit "ログイン", class: "btn btn-warning btn-block btn-{themecolor} rounded-pill" %>
        </div>
      <% end %>
      <div class="text-center">
        <%= render "public/shared/links" %>
      </div>
    </div>
    <div class="offset-lg-4 offset-md-3 offset-sm-2 offset-2"></div>
  </div>
</div>