<div class="container">
  <%= render "layouts/error", object: @food %>
  <div class="row">
    <div class="col-lg-4 offset-lg-4 col-md-6 offset-md-3 col-sm-8 offset-sm-2 col-8 offset-2">
      <h4 class="text-center my-5">材料の追加(1人分)</h4>

      <%= form_with model: @food, url: recipe_foods_path(params[:recipe_id]) do |f| %>
        <%= f.hidden_field :recipe_id %>

        <div class="form-group">
          <%= f.label "材料・調味料" %>
          <%= f.text_field :name, placeholder: "例) 鶏胸肉", class: "form-control" %>
        </div>

        <div class="form-group mb-5">
          <%= f.label "分量" %>
          <%= f.text_field :amount, placeholder: "例) 200g", class: "form-control" %>
        </div>

        <div class="form-group mb-5">
          <%= f.submit "追加", class: "btn btn-warning btn-block btn-{themecolor} rounded-pill" %>
        </div>
      <% end %>

      <% @foods.each do |food| %>
        <div style="display: flex; justify-content: space-between">
          <p>
            <%= food.name %>
            <%= food.amount %>
          </p>
          <p><%= link_to "削除", recipe_food_path(params[:recipe_id], food), method: :delete, class: "btn btn-danger btn-{themecolor} rounded-pill" %></p>
        </div>
      <% end %>

      <%= link_to "材料の追加をする", recipe_path(params[:recipe_id]), class: "btn btn-warning btn-block btn-{themecolor} rounded-pill" %>
    </div>
    <div class="offset-lg-4 offset-md-3 offset-sm-2 offset-2"></div>
  </div>
</div>