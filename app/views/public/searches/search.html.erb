<div class="container">
  <div class="row">
    <div class="col-md-12">
      <% if @name.present? %>
        <h5 class="my-5">「<%= @name %>」の検索結果</h5>
      <% else %>
        <h5 class="my-5">検索結果</h5>
      <% end %>
    </div>
  </div>
  <div class="row">
    <% @recipes.each do |recipe| %>
      <div class="col-md-3 mb-4">
        <div class="card">
          <%= link_to recipe_path(recipe) do %>
            <%= image_tag recipe.image, style: "object-fit: cover; height: 253px; width: 100%;" %>
          <% end %>
          <div class="card-body">
            <p class="card-text"><%= recipe.name %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>